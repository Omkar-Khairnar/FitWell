<!DOCTYPE html>
<html lang="en">

<head> 
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
  <link rel="stylesheet" href="./CSS/admin_dashboard.css" />
  <title>Responsive Admin Dashboard</title>
</head>
 
<body>
  <div class="d-flex" id="wrapper">
    <!-- Sidebar --><!-- /#sidebar-wrapper -->
    <%- include('admin_dashboard_side_wrapper.ejs'); %>
    <!-- Page Content -->
    <div id="page-content-wrapper">
      <!-- /#top-wrapper -->
      <%- include('admin_dashboard_top_wrapper.ejs'); %>
        <div class="container-fluid px-4 overflow-scroll">
              <div class="row my-5">
                <h3 class="fs-4 mb-3">Total Members</h3>
                <div class="col">
                  <table class="table bg-white rounded shadow-sm  table-hover">
                    <thead>
                      <tr>
                        <th scope="col" width="50">Sr.</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">DOJ</th> 
                        <th scope="col">Gender</th>
                        <th scope="col">Weight</th>
                        <th scope="col">Height</th>
                        <th scope="col"></th>
                        
                      </tr>
                    </thead>
                    <tbody>
                      <%let count=1 %>
                      <% users.forEach((user)=>{ %>
                        <tr>
                          <th scope="row"><%=count%></th>
                          <% count=count+1%>
                          <td><%=user.name%></td>
                          <td><%=user.email%></td>
                          <td><%=user.DateOfJoin%></td>
                          <td><%=user.gender%></td>
                          <td><%=user.weight%></td>
                          <td><%=user.height%></td>
                          <form method="post" action="/adminactions/deleteuser">
                            <input type="text" value=<%=user.id%> class="d-none" name="userid" >
                            <td> <button type="submit" style="border: none;"><i class="fa-solid fa-trash" style="color:red; cursor: pointer;"></i></button></td>
                          </form>
                        </tr>
                      <% })%>
                      
                    </tbody>
                  </table>
                </div>
              </div>
        </div>
    
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://kit.fontawesome.com/8f8e3c7113.js" crossorigin="anonymous"></script>

  <script>
    var el = document.getElementById("wrapper");
    var toggleButton = document.getElementById("menu-toggle");

    toggleButton.onclick = function () {
      el.classList.toggle("toggled");
    };
  </script>
</body>

</html>