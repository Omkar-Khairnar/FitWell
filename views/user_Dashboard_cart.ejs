</head>

<body>
  <!-- partial:index.partial.html -->
  <div class="dashboard">
    <%- include('user_dashboard_navbar.ejs'); %>

      <div class="dashboard-app">
        <header class="dashboard-toolbar">
          <a href="#!" class="menu-toggle"><i class="fas fa-bars"></i></a>
          <a href="/" class="menu-toggle">
            <i class="fas fa-right-from-bracket"></i>
            Logout
          </a>
        </header>





        <!-- User Profile  -->
        <div class="dashboard-content" id="dashboard-review-page">
          <div class="parent-container">
            <div class="cart-container">
              <table>
                <tr>
                  <th>Product</th>
                  <th>Quantity</th>
                  <th>Subtotal</th>
                </tr>
                <tr>
                  <td>
                    <div class="cart-info">
                      <img src="./img/product_2-300x300.jpg" />
                      <div>
                        <h4>Nitro Tech </h4>
                        <h5>price :$<span class="cart-product-price">35</span></h5><br />
                        <a href="#">Remove</a>
                      </div>
                    </div>
                  </td>
                  <td><input type="number" value="1" min="1" max="59" /></td>
                  <td>$35</td>
                </tr>

                <!-- <tr>
                  <td>
                    <div class="cart-info">
                      <img src="./img/product_1-300x300.jpg" />
                      <div>
                        <p>SYNTHA-6</p>
                        <small>price :$40</small><br />
                        <a href="#">Remove</a>
                      </div>
                    </div>
                  </td>
                  <td><input type="number" value="1" /></td>
                  <td>$40</td>
                </tr> -->
              </table>
            </div>

            <div class="total-price">
              <h3></h3>
              <table>
                <tr>
                  <th colspan="2">Price Details</th>
                </tr>
                <tr>
                  <td>Sub total</td>
                  <td>$75.00</td>
                </tr>
                <tr>
                  <td>Discount 5%</td>
                  <td>$5.00</td>
                </tr>
                <tr>
                  <td>Delivery charges</td>
                  <td>$5.00</td>
                </tr>
                <tr>
                  <td>Total Amount</td>
                  <td>$70.00</td>
                  <br /><br />
                </tr>
                <td>
                  <!-- Button trigger modal -->
                  <button type="button" id="checkbut" class="btn btn-primary" data-toggle="modal"
                    data-target="#exampleModalCenter">Check Out</button>
                </td>
              </table>
            </div>
          </div>
          <a id="back" href="./products">
            <h4>Continue Shopping</h4>
          </a>
        </div>
      </div>
  </div>




  <!-- Modal -->
  <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <section id="payment">
            <div class="container">
              <div class="column-two">
                <table class="details">
                  <tr class="last">
                    <th colspan="2">Review Your Details:</th>
                  </tr>
                  <tr>
                    <td>Name:</td>
                    <td>XYZ</td>
                  </tr>
                  <tr>
                    <td>Amount:</td>
                    <td><i class="fi-xnsuxm-rupee"></i> 24,000</td>
                  </tr>
                  <tr>
                    <td>GST(18%):</td>
                    <td><i class="fi-xnsuxm-rupee"></i> 5,400</td>
                  </tr>

                  <tr class="last">
                    <td>Total Amount:</td>
                    <td><i class="fi-xnsuxm-rupee"></i> 30,000</td>
                  </tr>
                </table>

                <table class="payment-method">
                  <tr class="last">
                    <th>Select Your Payment Method:</th>
                  </tr>

                  <tr>
                    <td>
                      <input type="radio" name="payment-method" id="payment-method">
                      <label for="payment-method">Net Banking/Credit/Debit Card</label>
                    </td>
                  </tr>

                  <tr>
                    <td>NOTE: After clicking the "Sure, Get me Started" button below, you will be redirected to the
                      secure
                      page of our online payment service partner.</td>
                  </tr>
                </table>

                <div class="buttons">
                  <a href="/user_Dashboard_home"><button class="sumbit" type="button">Sure, Get me Started</button></a>

                </div>
                <!-- <div class="payment-options">
                        <p>Important Note:* Your order is incomplete unless you click on the "Sure, Get me Started" button
                            above.</p>
                        <h2>PAYMENT OPTIONS</h2>
                        <img src="Images\flp-visa.png" alt="">
                        <img src="Images\flp-master-card.png" alt="">
                        <img src="Images\flp-maestro.png" alt="">
                        <img src="Images\flp-american.png" alt="">
                        <img src="Images\flp-net-banking.png" alt="">
                    </div> -->
              </div>

            </div>
          </section>
        </div>
        <!-- <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
        </div> -->
      </div>
    </div>
  </div>
  <!-- partial -->

  <script>
    let checkout = document.getElementById('checkbut');
    let modalbutton = document.getElementById('modalbutton');
    checkout.addEventListener('click', () => {
      modalbutton.click();
    })
  </script>
